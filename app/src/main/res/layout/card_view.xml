<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/relative_layout_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:padding="5dp">

            <TextView
                android:id="@+id/bodyTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="false"
                android:layout_toLeftOf="@id/bodyCropFactorTextView"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="2"
                android:textAlignment="gravity"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bodyHintLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bodyTitleLabel"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bodyCropFactorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textSize="18sp" />

            <View
                android:id="@+id/click_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>